{
    "name": "waypaper-engine",
    "private": true,
    "version": "1.2.8",
    "author": {
        "name": "0bCdian",
        "email": "diegoparranava@protonmail.com",
        "url": "https://github.com/0bCdian"
    },
    "scripts": {
        "dev": "vite",
        "rebuild": "electron-rebuild --w node_modules/better-sqlite3",
        "compile_daemon": "tsc daemon/daemon.ts  --outDir ./daemon/dist --target ES2020 --moduleResolution node --esModuleInterop --skipLibCheck --module CommonJs",
        "build": "npm install && npm run rebuild && npm run compile_daemon && vite build && electron-builder",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
        "db:extract_schema": "drizzle-kit introspect:sqlite",
        "db:generate": "drizzle-kit generate:sqlite",
        "db:studio": "drizzle-kit studio",
        "db:drop_migration": "drizzle-kit drop",
        "db:migrate": "tsc ./electron/database/migrations/migrate.ts --esModuleInterop",
        "preview": "vite preview"
    },
    "dependencies": {
        "@dnd-kit/core": "6.0.8",
        "@dnd-kit/modifiers": "6.0.1",
        "@dnd-kit/sortable": "7.0.2",
        "@dnd-kit/utilities": "3.2.1",
        "better-sqlite3": "9.5.0",
        "drizzle-orm": "0.30.8",
        "eslint-config-love": "^43.1.0",
        "framer-motion": "10.13.1",
        "react": "18.2.0",
        "react-bezier-curve-editor": "1.1.2",
        "react-dom": "18.2.0",
        "react-hook-form": "7.45.2",
        "react-hotkeys-hook": "^4.5.0",
        "react-responsive-pagination": "2.4.0",
        "react-router-dom": "6.15.0",
        "reflect-metadata": "0.1.13",
        "sharp": "0.33.3",
        "zustand": "^4.3.9"
    },
    "devDependencies": {
        "@electron/rebuild": "^3.6.0",
        "@originjs/vite-plugin-commonjs": "^1.0.3",
        "@types/better-sqlite3": "^7.6.9",
        "@types/node": "^20.8.0",
        "@types/react": "^18.0.37",
        "@types/react-dom": "^18.0.11",
        "@types/validator": "^13.11.1",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@vitejs/plugin-react": "^4.0.0",
        "autoprefixer": "^10.4.14",
        "daisyui": "^4.7.2",
        "drizzle-kit": "^0.20.14",
        "electron": "29.3.0",
        "electron-builder": "^24.9.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.3.4",
        "eslint-plugin-simple-import-sort": "^12.0.0",
        "eslint-plugin-unused-imports": "^3.1.0",
        "node-gyp": "^10.1.0",
        "postcss": "^8.4.35",
        "prettier": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.5.12",
        "tailwind-scrollbar": "^3.0.4",
        "tailwindcss": "^3.3.2",
        "typescript": "^5.3.3",
        "vite": "^4.5.2",
        "vite-plugin-electron": "^0.11.2",
        "vite-plugin-electron-renderer": "^0.14.5"
    },
    "main": "dist-electron/main.js",
    "homepage": "./"
}
