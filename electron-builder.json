{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "WaypaperManager",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": ["dist-electron", "dist"],
  "extraFiles": [
    {
      "from": "electron/icons",
      "to": "resources/icons",
      "filter": ["**/*"]
    },
    {
      "from": "daemon",
      "to": "resources/daemon",
      "filter": ["**/*", "!**/*.ts"]
    }
  ],
  "linux": {
    "artifactName": "${productName}.${ext}",
    "category": "Utility",
    "executableName": "waypaper-manager",
    "desktop": {
      "Name": "Waypaper Manager",
      "Comment": "Waypaper Manager",
      "Terminal": "false",
      "Type": "Application",
      "Icon": "resources/icons/app.png"
    }
  }
}
